<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer (book cover) with deeper green shade -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/green_secondary" />
            <corners android:radius="10dp" />
            <size android:width="110dp" android:height="160dp"/>
        </shape>
    </item>

    <!-- Inner (pages) with white color, slightly inset for "page" effect -->
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="7dp" />
        </shape>
    </item>

    <!-- Book icon, centered and sized appropriately -->
    <item
        android:gravity="center"
        android:width="48dp"
        android:height="48dp"
        android:drawable="@drawable/ic_library_books" />
</layer-list>